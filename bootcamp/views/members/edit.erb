<h2>Edit <%= @member.name %></h2>

<form method="post" action="/members/<%= @member.id %>">

<label for="name">Name:</label>
  <input
  type="text"
  name="name"
  id="name"
  value="<%= @member.name%>"
  />
<br>
<br>
  <label for="age-field">Age:</label>
    <input type="number" name="age" id="age-field" value="<%=@member.age%>"/>
<br>
<br>
  <label for="gender">Gender:</label>

    <input type="radio" name="gender" value="Male" <%="checked" if @member.gender == "Male" %>> Male
    <input type="radio" name="gender" value="Female"<%="checked" if @member.gender == "Female" %>> Female
    <input type="radio" name="gender" value="Other"<%="checked" if @member.gender == "Other" %>> Other

<br>
<br>
  <label for="membership_category">Membership Category:</label>
  <input type="radio" name="membership_category" value="Premium" <%="checked" if @member.membership_category == "Premium" %>> Premium
  <input type="radio" name="membership_category" value="Basic"<%="checked" if @member.membership_category == "Basic" %>> Basic
<br>
<br>
<br>
  <input type="submit" value="Submit Amendments">

</form>
