<hr>
<h2>Member Info: <%= @member.name %></h2>
<hr>
<p>Gender: <%= @member.gender %></p>
<p>Age: <%= @member.age %></p>
<p>Membership Category: <%= @member.membership_category %></p>


<form action="/members/<%= @member.id %>/edit"><input type="submit" value="Edit Membership"></form>


<hr>

<h3>Classes Booked:</h3>

<table>
  <tr>
    <th>Class</th>
    <th>Time</th>
  </tr>
    <% @member.gymclasses.each do |gymclass| %>
  <tr>
    <td> <%= gymclass.gymclass_name %></td>
    <td> <%= gymclass.start_time %></td>
  </tr>
    <% end %>
</table>
<br>
<form action="/gymclasses"><input type="submit" value="Book Class"></form>

<hr>

<form action="/members/<%= @member.id %>/delete" method="POST"><input type="submit" value="Cancel Membership"></form>

<hr>
